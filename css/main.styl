@import "nib"
@import 'nib/vendor'
@import 'nib/gradients'

c_texto = #666
c_pholder = #555
c_links = #428BCA
vendor-prefixes ?= webkit moz official ms o

@import "bootstrap.min.css";
@import "iconos.styl";

body, html
  background-color: #FFF
  color: c_texto
  font: normal normal normal 1em/1.5em Helvetica, sans-serif

body
  overflow-x auto

a
  color c_texto

pre
  font-family: monospace

#pagewrap
  margin 0 auto
  width 700px

#search
  border-radius 10px
  background-color white
  padding 10px
  position fixed
  right 40px
  display none

header 
  padding 20px 0  
  overflow hidden
  white-space nowrap 
  

  .logo
    display block
    //background-color #FFF
    overflow hidden

    .img-vendor-oz, .img-vendor-sap
      display: inline-block
      float left
      margin 0 10px
      

    .img-vendor-oz
      width 59px
      height 59px
      
      
    .img-vendor-sap
      width 120px

.magic_toolbar
  background-color white
  border-radius 0.2em
  border 1px solid #AAA
  box-shadow inset 0px 1px 1px  #ccc
  height 1.7em
  line-height 0
  margin 0 auto 0 
  overflow hidden
  padding 0 
  vertical-align top
  
  //width 100%
  //width 300px
  //position relative
  //white-space nowrap
  /*overflow hidden*/

  input
    background transparent
    border none
    color c_pholder
    font-style italic
    font 12px/20px Consolas, Monaco, Monospaced, monospace
    height 100%
    padding 0 0.9em
    vertical-align top
    width 80%
    //padding 0.4em 0px .2em

  #boxIndicator2
    height 100%
    display inline-block
    float right
    padding .3em .5em
    text-align middle
    vertical-align bottom


.menu
  display inline-block
  margin 0
  padding 5px 0 3px
  white-space nowrap
  float right
  line-height 0


  li 
    display inline-block
    padding 0 5px
    a        
      text-decoration none
      cursor pointer
      color c_texto

#op_fast_search:hover
  color yellow
  text-shadow 0 .5pt .5pt #777


.ico-list2:hover
    color red


table
  background-color: white
  border-radius: 10px
  width: 100%
  padding: 10px

th.sortable
  
  cursor: pointer
  text-decoration: underline

th.sortable:hover
  color: black

th.sorted-asc, th.sorted-desc
  color: black

td
  background-color: white

td.odd
  background-color: #666
  color white

td.hovered
  background-color lightblue
  color #666

.mt-menu
  display: inline-block

.mt-menu > li
  display inline-block
  opacity 0.5
  cursor pointer
  

#tabContainer
  padding 10px
  background-color transparent
  border-radius: 4px
  font "Lucida Sans Unicode", "Lucida Grande", sans-serif

.tabs
