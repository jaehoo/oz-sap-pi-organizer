c_texto = #666
c_pholder = #555


@import "bootstrap.min.css";
@import "iconos.styl";

body, html
  background-color: #FFF
  color: c_texto
  font: normal normal normal 1em/1.5em Helvetica, sans-serif

a
  color c_texto

pre
  font-family: monospace

#pagewrap
  margin: 0 auto
  width: 700px

#search
  -webkit-border-radius: 10px
  background-color: white
  padding: 10px
  position: fixed
  right: 40px
  display: none

header 
  padding 20px 0  
  overflow hidden
  white-space nowrap 
  

  .logo
    display block
    //background-color #FFF
    overflow hidden

    .img-vendor-oz, .img-vendor-sap
      display: inline-block
      float left
      margin 0 10px
      

    .img-vendor-oz
      width 59px
      height 59px
      
      
    .img-vendor-sap
      width 120px

.magic_toolbar
  border-radius 4px
  box-shadow: 0px 0px 2px  #999
  margin 10px auto 0 auto
  padding 10px
  background-color white
  width 300px
  position relative
  white-space nowrap
  /*overflow hidden*/

  

  .menu
    display inline-block
    margin 0
    padding 0
    white-space nowrap
    
    li 
      display inline-block
      padding 0 5px
      a        
        text-decoration none
        cursor pointer
        color c_texto


  input
    border: none
    padding: 0px 10px
    font-style: italic
    font: 14px/20px Consolas, Monaco, Monospaced, monospace
    color: c_pholder
    display inline-block

#op_fast_search:hover
  color yellow
  text-shadow 0 1px 1px #777


.ico-list2:hover
    color red


table
  background-color: white
  -webkit-border-radius: 10px
  width: 100%
  padding: 10px

th.sortable
  
  cursor: pointer
  text-decoration: underline

th.sortable:hover
  color: black

th.sorted-asc, th.sorted-desc
  color: black

td
  background-color: white

td.odd
  background-color: #666
  color: white

td.hovered
  background-color: lightblue
  color: #666

.mt-menu
  display: inline-block

.mt-menu > li
  display: inline-block
  opacity: 0.5
  cursor: pointer
  

#tabContainer
  padding: 10px
  background-color: transparent
  -moz-border-radius: 4px
  border-radius: 4px
  font: .48em "Lucida Sans Unicode", "Lucida Grande", sans-serif

.tabs
  margin: 3px

.tabs > ul
  font-size: 1em
  list-style: none
  margin: 6px
  background-color: rgb(90,90,90)
  display: inline-block
  float: left
  -moz-border-radius: 3px
  border-radius: 3px
  padding: 2px

.tabs > ul > li
  margin: 0 0px 0 0
  padding: 5px 10px
  display: block
  float: left
  color: #FFF
  -webkit-user-select: none
  -moz-user-select: none
  user-select: none
  -moz-border-radius-topleft: 3px
  -moz-border-radius-topright: 3px
  -moz-border-radius-bottomright: 3px
  -moz-border-radius-bottomleft: 3px
  border-top-left-radius: 3px
  border-top-right-radius: 3px
  border-bottom-right-radius: 3px
  border-bottom-left-radius: 3px
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#0C91EC), color-stop(100%,#257AB6))

.tabs > ul > li:hover
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFFFFF), color-stop(10%,#F3F3F3), color-stop(50%,#F3F3F3), color-stop(100%,#FFFFFF))
  cursor: pointer
  color: #333

.tabs > ul > li.tabActiveHeader
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFFFFF), color-stop(10%,#F3F3F3), color-stop(50%,#F3F3F3), color-stop(100%,#FFFFFF))
  cursor: pointer
  color: #333
  border-color: rgb(173, 173, 173)

.boxHolder
  -moz-border-radius-topleft: 4px
  -moz-border-radius-topright: 4px
  -moz-border-radius-bottomright: 4px
  -moz-border-radius-bottomleft: 4px
  background-color #fafafa
  border-top-left-radius: 4px
  border-top-right-radius: 4px
  border-bottom-right-radius: 4px
  border-bottom-left-radius: 4px
  padding: 10px 10px 25px
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFFFFF), color-stop(90%,#FFFFFF), color-stop(100%,#e4e9ed))
  margin: 0
  color: #333
  box-shadow: 0px 0px 2px  #777

#btnBuild
  min-width: 5em
  

#dynTable, #dynDeatilTable
  width: 100%
  overflow-x: auto

.tabContentMenu
  margin: 3px 0 8px

.detailScenario
  font-size .8em

  .dsnd, .drcv, .dpi
    padding 3px
    display block
    width 100%

.dsnd, .drcv, .dpi 
  > h3
    border-bottom 1px solid #bbb
    color #333
    font-style bold
    font-size 12.5pt
    margin 0 0 5px 0
    padding-left 3px


  .dpi
    border-right 1px solid #ccc
    border-left 1px solid #ccc

.ico-cancel-circle
  text-decoration none
  cursor pointer
  position absolute
  float right

.ico-cancel-circle:hover
  color #FF6036

.dsnd 
  label
    display inline-block
    line-height normal
    font-weight normal
    margin 0

  p
    margin 0
    strong
      width 80px;
      display inline-block


@media screen and (min-width:768px)
  .detailScenario
    .dsnd, .drcv, .dpi
      display inline-block
      width 31%

  .magic_toolbar
    display block
    position relative
    width 300px
    white-space nowrap

  header 
    .logo
      float left
      