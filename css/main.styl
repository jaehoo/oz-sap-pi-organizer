  padding 5px

.iclose:hover
  //color #FF6036
  background-color #777
  color #fff
  text-decoration none
  border-radius 50%


.newBox
  display none
  opacity 0

.popcontainer
  padding 10px
  overflow-x hidden

.itemHead
  margin 0 0 3px

  span
    color gray
    font-size 1.8 em

    a,  a:hover
      font-size 13 pt
      text-decoration none
      vertical-align middle
      padding 0 10px

